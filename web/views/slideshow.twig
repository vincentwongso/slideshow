<html>
<head>
    <link rel="stylesheet" href="http://www.aaronvanderzwan.com/maximage/lib/css/jquery.maximage.css?v=1.2" type="text/css" media="screen" charset="utf-8" />
    <link rel="stylesheet" href="http://www.aaronvanderzwan.com/maximage/lib/css/screen.css?v=1.2" type="text/css" media="screen" charset="utf-8" />
    <style>
        .cycle-slideshow { width: 100%; height: 100%; margin: auto; border: 1px solid #bbb; background: #ffc }
        .cycle-slideshow img { opacity: 0; filter:alpha(opacity=0); }
    </style>

</head>
<body>
<div id="maximage" class="cycle-slideshow"
     data-cycle-fx="fadeout"
     data-cycle-timeout="5000"
     data-cycle-center-horz=true
     data-cycle-center-vert=true
>
    {% for result in results %}
        <img src="{{ result.image_url }}" alt=""  />
    {% endfor %}
</div>

<script src='http://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.js'></script>
<script src="http://malsup.github.io/jquery.cycle2.js"></script>
<script src="http://malsup.github.io/jquery.cycle2.center.js"></script>
<script type="text/javascript" charset="utf-8">
    function loadPhotos() {
        $(function(){
            $.ajax({
                method: "GET",
                url: "/index.php/slideshow/update"
            }).done(function( data ) {
                for (var i=0; i < data.length; i++) {
                    if ($("img[src$='"+data[i].image_url+"']").length == 0) {
                        console.log("Adding new image: ", data[i].image_url);
                        var newImg = '<img src="'+data[i].image_url+'" />';
                        $('.cycle-slideshow').cycle('add', newImg);
                    } else {
                        console.log("Image already exist: ", data[i].image_url);
                    }
                }
            });
        });
    }
    setInterval( loadPhotos, 10000 );
</script>
</body>
</html>